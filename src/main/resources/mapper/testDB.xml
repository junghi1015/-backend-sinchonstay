<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.catbellrow">
    <select id="getCongMember" resultType="com.example.catbellrow.vo.MemberOfCongressManVO">
        SELECT * FROM member_congress
    </select>

    <select id="selectRaws" resultType="com.example.catbellrow.vo.BillVO">
        SELECT * FROM bill
    </select>

<!-- 법안 리스트 출력 -->
    <select id="getRawList" resultType="com.example.catbellrow.vo.RawContentsVO">
        SELECT * FROM raw_contents
    </select>

<!-- 법안 리스트 출력 -->
    <select id="rawListCount" resultType="int">
        SELECT COUNT(*) FROM raw_contents
    </select>

    <!-- 검색 결과 조회 -->
    <select id="rawListSearch" resultType="com.example.catbellrow.RawContentsVO">
        SELECT * FROM raw_contents where raw_title like '%pram%'
    </select>

    <!-- 최신순 법안 조회 -->
    <select id="searchContents" resultType="com.example.catbellrow.RawContentsVO">
        SELECT * FROM raw_contents order by resister_date desc
    </select>



</mapper>