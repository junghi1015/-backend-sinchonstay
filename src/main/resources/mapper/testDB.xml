<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.project.sinchon">

    <!-- 방 리스트 출력 -->
    <select id="getRoomList" resultType="com.project.sinchon.vo.roomVO">
        SELECT * FROM room;
    </select>

    <!-- 리뷰 리스트 출력 -->
    <select id="getReviewList" resultType="com.project.sinchon.vo.reviewVO">
        SELECT * FROM review where grade = 5 order by reg_date desc;
    </select>

    <!-- 관리자 페이지 고객관리 - 최근 예약순  -->
    <select id="getResManage" resultType="com.project.sinchon.vo.reservationVO">
        SELECT * FROM reservation r inner join user u on r.user_ID = u.user_ID where r.res_state = 1 order by res_date desc
    </select>



</mapper>